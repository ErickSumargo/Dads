<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Base color -->
        <item name="colorPrimary">@color/teal</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnBackground">@color/grayLighter</item>
        <item name="colorControlNormal">@color/dark</item>

        <!-- Window system -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowBackground">@color/white</item>

        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>

        <!-- Text system -->
        <item name="android:textColorPrimary">@color/dark</item>
        <item name="android:textColorHint">@color/gray</item>

        <item name="android:fontFamily">@font/product_sans</item>

        <!-- Snackbar system -->
        <item name="snackbarStyle">@style/SnackbarContainerTheme</item>
        <item name="snackbarTextViewStyle">@style/SnackbarTextViewTheme</item>
    </style>

    <!-- Base Snackbar theme. -->
    <style name="SnackbarContainerTheme" parent="@style/Widget.MaterialComponents.Snackbar">
        <item name="backgroundTint">@color/darkLight</item>
    </style>

    <style name="SnackbarTextViewTheme" parent="@style/Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:alpha">1.0</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
