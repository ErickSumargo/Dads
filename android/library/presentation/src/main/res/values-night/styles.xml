<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base sheet theme. -->
    <style name="BottomSheetDialogTheme" parent="Theme.MaterialComponents.DayNight.BottomSheetDialog">
        <!-- Base color -->
        <item name="colorPrimary">@color/teal</item>
        <item name="colorOnSurface">@color/darkLight</item>
        <item name="colorOnBackground">@color/grayLight</item>
        <item name="colorControlNormal">@color/white</item>

        <!-- Window system -->
        <item name="android:navigationBarColor">@color/dark</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
    </style>

</resources>
